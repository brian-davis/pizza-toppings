          <b>Name:</b>
          <%= text_field_tag(:_topping_name, @topping.name, readonly: true) %>
        </div>

        <div class="list-item-line form-fields">
          <b></b>
          <span class="undo-label">
            <span class="clickable" data-action="click->pizzas#listItemDismiss">
              <b class="danger">â“§</b>
              <b class="danger">Cancel</b>
            </span>
          </span>
          </span>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
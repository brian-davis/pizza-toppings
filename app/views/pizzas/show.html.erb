<p style="color: green"><%= notice %></p>

<p class="pizza-name">
  <%= @pizza.name %>
</p>

<p class="pizza-description">
  Includes Toppings: <%= @pizza.topping_list.presence || "none" %>
</p>

<div>
  <%= link_to "Edit this pizza", edit_pizza_path(@pizza) %> |
  <%= link_to "Back to pizzas", pizzas_path %>

  <%= button_to "Destroy this pizza", @pizza, method: :delete %>
</div>
